//- 
include ../mixins/blog-box


//- 
section.blog.text-light-1.d-flex.flex-column.justify-content-start.justify-content-lg-center#blog

        .row.no-gutters.blog__heading.align-items-center.mb-4
            .col.d-none.d-md-block.placeholder
            .col.d-flex.justify-content-start.justify-content-md-center
                h3(class="weight-bolder text-uppercase text-mid mb-0 px-2 px-md-0" key=titlePage data-lang="head3-3") blog
            .col.d-flex.justify-content-end
                a(class="btn blog__btn btn-outline-primary text-light-1 rounded-0 text-uppercase" href="/blog" key=titlePage data-lang="btn-6") all articles

        //- 
        .row.no-gutters.blog__article.position-relative.justify-content-between
            -var n = 21
            while n <= 28
                +blogBox(n++, 'feb 2020', 'px-2 grow-0')