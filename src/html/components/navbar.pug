//- 
include ../mixins/logo

//- 
nav(class="navbar navbar-expand-lg navbar-dark border-bottom border-gray")
  //- Logo
  +logo('./img/other/logo.png')

  //- Button Toggle Navbar
  button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
    span(class="navbar-toggler-icon")

  //- Items Navbar
  div(class="collapse navbar-collapse mt-2 mt-lg-0 text-uppercase" id="navbarSupportedContent")
    ul(class="navbar-nav changeDir")
      each items in ['home', 'about-us', 'services', 'works', 'price', 'blog', 'contacts']
        li(class="nav-item cursor mr-0 mr-xl-2")
          a(class="nav-link w-100 p-2 p-md-3" key=items.replace('-', '') class=(title == items ? 'active-link' : '') href=items == 'home' ? '/' : items)=items === 'about-us' ? items.replace('-', ' ') : items
      div
        include ./changeLang