include ../mixins/button-primary

//- 
mixin parAboutUs({title, par, addClass=false, addClassTitle=false, btnShow=false, num=1, key=titlePage, numBtn=1, attrsBtn, href='https://www.google.com'})

    div(class=addClass)

        h3(class="text-small text-uppercase text-primary weight-bolder mb-3" key=key data-lang=`head3-${num}` class=addClassTitle) #{title}

        .bg-third.p-3.p-lg-5.rounded.text-light
            p(class="text-xsmall first-letter"  key=key data-lang=`par-${num}`) #{par}

            if btnShow
                +createBtn('btn btn-primary border-0 rounded-0 mt-3 text-uppercase text-xxsmall py-2 px-4 weight-bolder', 'about us', href)(key=titlePage data-lang=`btn-${numBtn}`)